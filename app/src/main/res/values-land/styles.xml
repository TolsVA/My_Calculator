<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalKey" parent="Theme.AppCompat"> <!-- Светлая тема -->
        <item name="android:background">@color/white</item>
        <item name="android:textSize">?android:textSize</item>
        <item name="android:tint">@color/black</item> <!-- цвет стрелки и точек -->
        <item name="android:textColor">@color/black</item><!-- цвет текста кнопок -->
        <item name="colorPrimary">@color/df</item>
        <item name="android:textColorPrimary">@color/black</item> <!-- цвет названия темы -->
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:statusBarColor">@color/grey</item>
        <item name="android:navigationBarColor">?android:statusBarColor</item>
    </style>
    <style name="CalKey1.AppThemeLight" parent="Theme.MaterialComponents.Light"> <!-- Красная тема -->
        <item name="colorPrimary">@color/df</item>
        <item name="android:textColor">@color/burgundy</item>
        <item name="android:colorForeground">@color/burgundy</item>
        <item name="android:fontFamily">@font/ofont</item>
        <item name="android:statusBarColor">@color/burgundy</item>  <!-- цвет StatusBar -->
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:navigationBarColor">?android:statusBarColor</item>
    </style>
</resources>